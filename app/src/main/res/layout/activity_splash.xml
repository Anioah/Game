<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorStrongBlue"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/splash_textAbove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/splashTextAbove"
        android:textColor="@color/colorWhite"
        android:textSize="32dp"
        android:textStyle="bold"
        android:layout_above="@id/splash_image"/>

    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:src="@drawable/games" />

    <TextView
        android:id="@+id/splash_textBelow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/splashTextBelow"
        android:textColor="@color/colorWhite"
        android:textSize="32dp"
        android:textStyle="bold"
        android:layout_below="@id/splash_image"/>

</RelativeLayout>